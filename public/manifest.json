{
  "manifest_version": 2,
  "name": "Hello World From Typescript",
  "version": "0.7",
  "description": "A sample extension written in typescript for testing",
  "permissions": ["activeTab", "<all_urls>"],
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "all_frames": true
    }
  ],  
  "browser_action": {
    "default_title": "Read aloud selected text"
  },
  "commands": {
    "HWFT": {
      "description": "Read aloud selected text",
      "suggested_key": { "default": "Alt+R" }
    }
  }
}
