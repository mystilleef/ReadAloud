{
  "manifest_version": 2,
  "name": "Read Aloud",
  "version": "0.15",
  "description": "Read aloud selected text",
  "permissions": ["activeTab", "tts", "<all_urls>"],
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_title": "Read aloud selected text",
    "default_icon": "images/default.svg"
  },
  "commands": {
    "read-aloud-selected-text": {
      "description": "Read aloud selected text",
      "suggested_key": {"default": "Ctrl+Space"}
    }
  }
}
