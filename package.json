{
  "name": "readaloud",
  "author": "Lateef Alabi-Oki <mystilleef@gmail.com>",
  "license": "GPL-3.0-or-later",
  "version": "0.44.7",
  "type": "module",
  "repository": "https://github.com/mystilleef/ReadAloud",
  "description": "An extension to read aloud selected text in Google Chrome",
  "keywords": [
    "chrome-extension",
    "web-extension",
    "typescript",
    "read aloud"
  ],
  "scripts": {
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "build": "tsc -b && vite build",
    "watch": "vite",
    "preview": "vite preview",
    "prerelease": "npm run build",
    "release": "ts-node-esm scripts/release.ts",
    "predeploy": "npm run build",
    "deploy": "ts-node-esm scripts/deploy.ts",
    "test-auth": "ts-node-esm scripts/service-account-auth.ts",
    "test": "vitest run",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@extend-chrome/messages": "^1.2.2",
    "@extend-chrome/storage": "^1.5.0",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.0",
    "@crxjs/vite-plugin": "^2.3.0",
    "@types/chrome": "^0.1.36",
    "@types/node": "^25.2.3",
    "@types/web": "^0.0.336",
    "chalk": "^5.6.2",
    "chrome-webstore-upload": "^4.0.3",
    "eslint": "^10.0.0",
    "execa": "^9.6.1",
    "google-auth-library": "^10.5.0",
    "rimraf": "^6.1.3",
    "rollup": "^4.57.1",
    "rollup-plugin-zip": "^1.0.3",
    "semver": "^7.7.4",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-biome": "^1.1.2",
    "vite-plugin-static-copy": "^3.2.0",
    "vite-plugin-zip-pack": "^1.2.4",
    "@vitest/coverage-v8": "^4.0.18",
    "@types/jsdom": "^27.0.0",
    "jsdom": "^28.1.0",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "vite-plugin-biome": {
      "@biomejs/biome": "$@biomejs/biome"
    }
  }
}
