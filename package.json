  "version": "1.0.0",
  "repository": "https://github.com/mystilleef/ReadAloud",
  "description": "An extension to read aloud selected text in Google Chrome",
  "dependencies": {
    "redux": "^4.0.4"
  },
  "devDependencies": {
    "@types/chrome": "0.0.88",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "eslint": "^6.2.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-functional": "^1.0.0-rc.2",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-redux": "^6.0.1",
    "redux-devtools": "^3.5.0",
    "rollup": "^1.19.4",
    "rollup-plugin-commonjs": "^10.0.2",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.1",
    "rollup-plugin-tslint": "^0.2.2",
    "rollup-plugin-typescript2": "^0.22.1",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "tslib": "^1.10.0",
    "tslint": "^5.18.0",
    "tslint-clean-code": "^0.2.9",
    "tslint-microsoft-contrib": "^6.2.0",
    "tslint-sonarts": "^1.9.0",
    "typescript": "^3.5.3"
  },
  "scripts": {
    "prebuild": "npm run clean:build; rm -rf public/js; mkdir -p public/js",
    "build": "rollup -c",
    "postbuild": "cp -r out/* public/js",
    "predist": "npm run clean:dist; mkdir -p dist/js",
    "dist": "npm run build",
    "postdist": "cp -r public/* dist/",
    "clean": "rm -rf build out dist public/js",
    "clean:build": "rm -rf out",
    "clean:dist": "rm -rf dist",
    "clean:out": "npm run clean:build",
    "prewatch": "npm run clean ; npm run build",
    "watch": "rollup -cw"
  }
}
