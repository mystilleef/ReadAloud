{
  "name": "readaloud",
  "author": "Lateef Alabi-Oki <mystilleef@gmail.com>",
  "license": "GPL-3.0-or-later",
  "version": "0.29.4",
  "type": "module",
  "repository": "https://github.com/mystilleef/ReadAloud",
  "description": "An extension to read aloud selected text in Google Chrome",
  "keywords": [
    "chrome-extension",
    "web-extension",
    "typescript",
    "read aloud"
  ],
  "scripts": {
    "clean": "rimraf build dist out public/js tsconfig.tsbuildinfo",
    "check": "eslint src/**",
    "build": "rollup -c",
    "predist": "npm run clean",
    "dist": "npm run build",
    "release": "cross-env NODE_ENV=production npm run dist",
    "prewatch": "npm run clean",
    "watch": "rollup -cw"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^3.0.1",
    "@types/chrome": "0.0.176",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.64.0",
    "rollup-plugin-chrome-extension": "^3.6.7",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-empty-dir": "^1.0.5",
    "rollup-plugin-summary": "^1.3.0",
    "rollup-plugin-typescript2": "^0.31.1",
    "rollup-plugin-zip": "^1.0.3",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@extend-chrome/messages": "^1.2.2",
    "@extend-chrome/storage": "^1.5.0",
    "eslint-plugin-prettier": "^4.0.0"
  }
}
