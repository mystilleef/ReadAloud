{
  "name": "readaloud",
  "author": "Lateef Alabi-Oki <mystilleef@gmail.com>",
  "license": "GPL-3.0-or-later",
  "version": "0.44.1",
  "type": "module",
  "repository": "https://github.com/mystilleef/ReadAloud",
  "description": "An extension to read aloud selected text in Google Chrome",
  "keywords": [
    "chrome-extension",
    "web-extension",
    "typescript",
    "read aloud"
  ],
  "scripts": {
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "build": "tsc -b && vite build",
    "watch": "vite",
    "preview": "vite preview",
    "prerelease": "npm run build",
    "release": "ts-node-esm scripts/release.ts",
    "predeploy": "npm run build",
    "deploy": "ts-node-esm scripts/deploy.ts"
  },
  "dependencies": {
    "@extend-chrome/messages": "^1.2.2",
    "@extend-chrome/storage": "^1.5.0",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.7",
    "@crxjs/vite-plugin": "^2.2.0",
    "@types/chrome": "^0.1.24",
    "@types/node": "^24.9.1",
    "@types/web": "^0.0.282",
    "chalk": "^5.6.2",
    "chrome-webstore-upload": "^4.0.3",
    "eslint": "^9.38.0",
    "execa": "^9.6.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.52.5",
    "rollup-plugin-zip": "^1.0.3",
    "semver": "^7.7.3",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-plugin-biome": "^1.0.12",
    "vite-plugin-static-copy": "^3.1.4",
    "vite-plugin-zip-pack": "^1.2.4"
  },
  "overrides": {
    "vite-plugin-biome": {
      "@biomejs/biome": "$@biomejs/biome"
    }
  }
}
