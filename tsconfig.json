{
  "compilerOptions": {
    "incremental": true,
    "target": "esnext",
    "module": "esnext",
    "composite": true,
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "newLine": "LF",
    "rootDir": "src",
    "outDir": "build",
    "importHelpers": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "declaration": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "lib": [
      "esnext",
      "esnext.intl",
      "esnext.asynciterable",
      "esnext.array",
      "esnext.bigint",
      "esnext.symbol",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "out",
    "public",
    "build",
    "**/*.js"
  ],
  "compileOnSave": true
}
