{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "newLine": "LF",
    "rootDir": "src",
    "outDir": "build",
    "moduleResolution": "Node",
    "incremental": true,
    "composite": true,
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "declaration": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "ESNext.Array",
      "ESNext.AsyncIterable",
      "ESNext.BigInt",
      "ESNext.Intl",
      "ESNext.Promise",
      "ESNext.String",
      "ESNext.Symbol",
      "ScriptHost"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "out",
    "public",
    "build",
    "**/*.js"
  ],
  "compileOnSave": true
}
