{
  "name": "Read Aloud",
  "manifest_version": 3,
  "version": "0.43.5",
  "permissions": ["contextMenus", "storage", "tts"],
  "background": {
    "service_worker": "src/background.ts"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"]
    }
  ],
  "action": {
    "default_title": "Read aloud selected text",
    "default_icon": {
      "16": "images/default16.png",
      "32": "images/default32.png",
      "48": "images/default48.png",
      "128": "images/default128.png"
    }
  },
  "options_page": "options.html",
  "commands": {
    "read_aloud_selected_text": {
      "description": "Read aloud selected text",
      "suggested_key": {
        "default": "Ctrl+Shift+Space"
      }
    }
  },
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": [
        "images/default.png",
        "images/default.svg",
        "images/stop.svg",
        "images/stop.png"
      ]
    }
  ]
}
